/* 背景渐变色 */

.indexBGC {
  background-image: url('http://qcloudtest-1253375012.cn-south.myqcloud.com/1514703267975-Sy3oYWUXf.png');
  background-repeat: no-repeat;
  background-size: cover;
}

/* 搜索栏 */

.searchwhite {
  height: 8px;
}

.ipt {
  border: solid;
  border-color: lightblue;
  border-radius: 20px;
  width: 80%;
  border-width: 2px;
  margin: auto;
  background-color: white;
  padding-left: 15px;
  font-size: 15px;
  height: 32px;
}

/* 功能栏 */

.circlebar {
  display: flex;
  justify-content: center;
  height: 100px;
}

.circlebar-son {
  width: 33.2%;
  height: 100px;
  float: left;
  display: flex;
  justify-content: center;
}

.circlebar-son-top {
  margin: auto;
  width: 80px;
  height: 80px;
}

.word {
  font-size: 12px;
  color: #29b7a4;
  float: left;
  margin-left: 15px;
}

/* 轮播图 */

.picture {
  height: 150px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.white {
  height: 2px;
}