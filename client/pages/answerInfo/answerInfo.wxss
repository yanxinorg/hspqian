/* pages/answerInfo/answerInfo.wxss */

.page{
  background: 	#d9f3ed;
}
.a-avatar {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.a-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}

.a-man {
  display: flex;
  width: 100%;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx #EAEAEA solid;
}
.a-man-left{
  width: 9%;
  height: 100%;
}
.a-man-right{
  width: 90%;
  height: 100%; 
}
.q-asker {
  height: 60rpx;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  justify-content: space-between;
}

.nickName {
  font-size: 15px;
  color: black;
  width: 100%;
  height:5%;
  padding: 1%;
  font-weight: bold;
}

.answer {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  font-size: 12px;
  color:	black;
  width: 95%;
  margin-right:5%; 
  padding: 1%;
}
.a-time{
  height:3%;
  /* width: 100%; */
  font-size: 10px;
  color:#969696;
  padding: 1%;
}

.content{
  height:40px;
  background-color: white;
}

.title {
  font-family: "Microsoft YaHei";
  font-weight: bold;
  font-size: 20px;
  text-align: center;
  padding-top: 5px;
  text-shadow: 5px 5px 5px #ccc;
  border-bottom: 2px #ccc solid;
  width:50%;
  margin: auto;
}

.textcontent {
  display: block;
  background-color: white;
  width: 100%;
}

.question {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  font-size: 15px;
  color:	black;
  width: 95%; 
  padding: 1%;
  margin-left: 1%;
}


.a-asker{
  width: 100%;
  border-bottom: 1rpx #EAEAEA solid;
  background-color: white;
}



.btn{
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  height: 10%;
  width: 100%;
  border-radius: 5%;
}
.margin-bottom{
  height: 90%;
  margin-bottom: 15%;
}